<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/arkadaslar_backgorund">

    <ImageView
        android:id="@+id/kimlerListAvatarImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/kimlerListKullaniciAdiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/kimlerListAvatarImageView"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    
    <TextView
        android:id="@+id/kimlerListAdSoyadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/kimlerListAvatarImageView"
        android:layout_below="@+id/kimlerListKullaniciAdiTextView"
        android:textSize="12sp"/>
    
 

</RelativeLayout>